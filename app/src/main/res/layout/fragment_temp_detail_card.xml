<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tempDetailMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34000000"
    tools:context=".TempDetailCardFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/weatherTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45° "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/humidityText"
        app:layout_constraintStart_toEndOf="@+id/cityLableText"
        app:layout_constraintTop_toBottomOf="@+id/weatherDescText" />

    <TextView
        android:id="@+id/weatherDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Sky"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/feelsLikeText"
        app:layout_constraintStart_toEndOf="@+id/cityLableText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityLableText"
        android:layout_width="133dp"
        android:layout_height="62dp"
        android:text="Mooselookmeguntic "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feelsLikeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Feels like 30°"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Humidity 84%"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feelsLikeText" />

</androidx.constraintlayout.widget.ConstraintLayout>